{
  "manifest_version": 3,
  "name": "Conversor USD/EUR a ARS",
  "version": "1.0",
  "description": "Convierte precios en USD y EUR a Pesos Argentinos.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://dolarapi.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.mercadolibre.com.ar/*",
        "https://www.amazon.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Conversor ARS"
  }
}
